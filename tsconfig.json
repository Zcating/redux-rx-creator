{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es5",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": false,

    "declaration": true,
    "declarationMap": true,

    "lib": [
      "es2018",
      "dom"
    ],
  },

  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/*/node_modules",
  ],
}

